<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:id ="@+id/GameStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게임 시작"
        android:textSize="18sp">
    </TextView>

    <!-- 턴 정보 -->
    <TextView
        android:id="@+id/turn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1턴"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <!-- 현재 보드 상태를 표시할 그리드 -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_marginTop="8dp">

        <!-- 각 포지션에 대한 TextView (게임 상태) -->
        <TextView android:id="@+id/position1" android:layout_width="50dp" android:layout_height="50dp" android:gravity="center" />
        <TextView android:id="@+id/position2" android:layout_width="50dp" android:layout_height="50dp" android:gravity="center" />
        <TextView android:id="@+id/position3" android:layout_width="50dp" android:layout_height="50dp" android:gravity="center" />
        <TextView android:id="@+id/position4" android:layout_width="50dp" android:layout_height="50dp" android:gravity="center" />
        <TextView android:id="@+id/position5" android:layout_width="50dp" android:layout_height="50dp" android:gravity="center" />
        <TextView android:id="@+id/position6" android:layout_width="50dp" android:layout_height="50dp" android:gravity="center" />
        <TextView android:id="@+id/position7" android:layout_width="50dp" android:layout_height="50dp" android:gravity="center" />
        <TextView android:id="@+id/position8" android:layout_width="50dp" android:layout_height="50dp" android:gravity="center" />
        <TextView android:id="@+id/position9" android:layout_width="50dp" android:layout_height="50dp" android:gravity="center" />
    </GridLayout>

</LinearLayout>
